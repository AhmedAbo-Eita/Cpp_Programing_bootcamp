{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++.exe build active file",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17", // Sets the C++ standard to C++17
                "-static",    // Statically links the executable
